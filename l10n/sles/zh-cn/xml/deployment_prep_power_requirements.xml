    <listitem>
     <para>
      8247-21L（IBM Power® 系统 S120L）
     </para>
    </listitem>
    <listitem>
     <para>
      8247-22L（IBM Power® 系统 S220L）
     </para>
    </listitem>
    <listitem>
     <para>
      8284-22A（IBM Power 系统 S2200）
     </para>
    </listitem>
    <listitem>
     <para>
      8286-41A（IBM Power 系统 S1400）
     </para>
    </listitem>
    <listitem>
     <para>
      8286-42A（IBM Power 系统 S2400）
     </para>
    </listitem>
   </itemizedlist>
  </sect3>
 </sect2>

